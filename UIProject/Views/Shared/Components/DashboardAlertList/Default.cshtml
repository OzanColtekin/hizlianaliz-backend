@using EntityLayer.Concrate
@model List<Alerts>
@{
    string msg;
    if(@ViewBag.stock == 0)
    {
        msg = "ürünün stoğu bitti!";
    }
    else
    {
        msg = $"ürün için son {@ViewBag.stock} stok!";
    }

}
<div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                      <h4 class="card-title mb-1">Bildirimler</h4>
                      <p class="text-muted mb-1">Veri Durumu</p>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-danger">
                                <i class="mdi mdi-alert-circle-outline"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Stok az</h6>
                                <p class="text-muted mb-0"><b>@ViewBag.stockProd</b> @msg</p>
                              </div>
                              <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">55 gün önce</p>
                                <p class="text-muted mb-0"></p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-danger">
                                <i class="mdi mdi-alert-octagon"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Kötü Değerlendirme</h6>
                                <p class="text-muted mb-0">Tablo adlı ürününde 78 adet kötü yorum var!</p>
                              </div>
                              <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">Bir ay önce</p>
                                <p class="text-muted mb-0">30 işlem, 5 güncelleme </p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-warning">
                                <i class="mdi mdi-cloud-download"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Fotoğraf Kalitesi</h6>
                                <p class="text-muted mb-0">Tablo adlı ürünün fotoğraflarını düzenle</p>
                              </div>
                              <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">1 saat önce</p>
                                <p class="text-muted mb-0">23 işlem, 5 güncelleme </p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-primary">
                                <i class="mdi mdi-clock"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Kötü Kargo</h6>
                                <p class="text-muted mb-0">Tablo adlı üründe kargolaman kötü.</p>
                              </div>
                              <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">35 dakika önce</p>
                                <p class="text-muted mb-0">45 işlem, 12 güncelleme</p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-info">
                                <i class="mdi mdi-chart-pie"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Ayın ürünü</h6>
                                <p class="text-muted mb-0">Tablo adlı ürünün bu ay en çok satan ürün oldu.</p>
                              </div>
                              <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">50 gün önce</p>
                                <p class="text-muted mb-0">27 işlem, 4 güncelleme </p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>