@model EntityLayer.Concrate.Categories
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@using(@Html.BeginForm("GetCategory","MarketAnalysis",FormMethod.Post)){
<div class="col-md grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Piyasa Analizi</h4>
            <div class="form-group">
                <label>Pazar Yeri</label>
                <select class="js-example-basic-single" style="width:100%">
                <option value="trendyol">Trendyol</option>
                <option value="hepsiburada">Hepsiburada</option>
                </select>
            </div>
            <div class="form-group">
                <label>Kategori</label>
                <select asp-for="CategoryID" asp-items="ViewBag.cat" class="js-example-basic-single" style="width:100%" id="drpList">

                       <option>Lütfen bir seçim yapınız.</option>

                </select>
            </div>

                <button class="btn btn-primary" id="hyperlink">Analiz</button>

        </div>
    </div>
</div>
}
